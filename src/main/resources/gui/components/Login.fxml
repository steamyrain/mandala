<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="root" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox fx:id="loginVBox" alignment="CENTER" spacing="20.0" styleClass="login-vbox">
         <children>
            <Label text="MASUK SEBAGAI">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="250.0" prefWidth="600.0" spacing="20.0" VBox.vgrow="NEVER" >
               <children>
                  <VBox fx:id="pubLoginVBox" alignment="CENTER" onMouseClicked="#LoginPublic" prefHeight="250.0" prefWidth="167.0" HBox.hgrow="NEVER" styleClass="pub-login-vbox">
                     <children>
                        <FontAwesomeIconView glyphName="USER" size="60" style="-fx-font-family: &quot;FontAwesome&quot;;" styleClass="public-icon"/>
                        <Label text="UMUM">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  <VBox fx:id="resLoginVBox" alignment="CENTER" onMouseClicked="#LoginResearcher" prefHeight="250.0" prefWidth="167.0" HBox.hgrow="NEVER" styleClass="res-login-vbox">
                     <children>
                        <FontAwesomeIconView glyphName="GRADUATION_CAP" size="50" style="-fx-font-family: &quot;FontAwesome&quot;;" />
                        <Label text="PENELITI">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  <VBox fx:id="admLoginVBox" alignment="CENTER" onMouseClicked="#LoginAdmin" prefHeight="250.0" prefWidth="167.0" HBox.hgrow="NEVER" styleClass="adm-login-vbox">
                     <children>
                        <FontAwesomeIconView glyphName="PIED_PIPER_ALT" size="50" style="-fx-font-family: &quot;FontAwesome&quot;;" />
                        <Label text="ADMIN">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</StackPane>
