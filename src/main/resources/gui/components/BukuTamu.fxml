<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXScrollPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.scene.text.Font?>
<StackPane fx:id="root" xmlns:fx="http://javafx.com/fxml/1"
           xmlns="http://javafx.com/javafx/2.2">
    <JFXScrollPane fx:id="scroll">
        <bottomBar>
            <children>
                <Label style="-fx-text-fill:WHITE; -fx-font-size: 60;">
                    Daftar Tamu
                    <StackPane.alignment>CENTER</StackPane.alignment>
                    <StackPane.margin>
                        <Insets>
                            <bottom>
                                60
                            </bottom>
                        </Insets>
                    </StackPane.margin>
                </Label>
            </children>
        </bottomBar>
        <content>
            <Pane style="-fx-padding:0 500 0 500;-fx-background-color: derive(#ffb200,-10%);" >

                <JFXTextField fx:id="namaDepan" focusColor="#48a5ea" layoutX="100.0" layoutY="92.0" prefHeight="25.0" prefWidth="217.0" promptText="Nama Depan" />
                <JFXTextField fx:id="email" focusColor="#48a5ea" layoutX="100.0" layoutY="157.0" prefHeight="25.0" prefWidth="217.0" promptText="Alamat Email" />
                <JFXTextField fx:id="nomorTelefon" focusColor="#48a5ea" layoutX="418.0" layoutY="157.0" prefHeight="25.0" prefWidth="332.0" promptText="Nomor HandPhone" />
                <JFXTextField fx:id="namaBelakang" focusColor="#48a5ea" layoutX="418.0" layoutY="92.0" prefHeight="25.0" prefWidth="332.0" promptText="Nama Belakang" />
                <JFXComboBox editable="true" fx:id="negara" focusColor="#48a5ea" layoutX="100.0" layoutY="224.0" prefHeight="25.0" prefWidth="217.0" promptText="Negara" />
                <JFXComboBox editable="true" fx:id="provinsi" focusColor="#48a5ea" layoutX="418.0" layoutY="224.0" prefHeight="25.0" prefWidth="150" promptText="Negara Bagian/Provinsi" />
                <JFXComboBox editable="true" fx:id="kota" focusColor="#48a5ea" layoutX="600.0" layoutY="224.0" prefHeight="25.0" prefWidth="150" promptText="Kota/Kabupaten" />
                <JFXButton fx:id="resetButton" onAction="#reset" layoutX="100.0" layoutY="349.0" prefHeight="25.0" prefWidth="94.0" style="-fx-background-color: #48A5EA;" text="Ulang" textFill="WHITE"/>
                <JFXButton fx:id="submitButton" onAction="#submit" layoutX="400.0" layoutY="349.0" prefHeight="25.0" prefWidth="116.0" style="-fx-background-color: #48A5EA;" text="Kirim" textFill="WHITE" />
            </Pane>
        </content>
    </JFXScrollPane>
</StackPane>
